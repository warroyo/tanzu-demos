pipeline {
   agent {
       kubernetes {
        label 'helm-basic'  
        idleMinutes 5 
        yamlFile 'jenkins/build-pod-basic.yml' 
        defaultContainer 'maven'
      }

   }
   environment {
        TBS_KUBE = credentials('tbs-kube')
        
    }
   stages {
       stage('Build') {
           steps {
               container('maven') {
                sh 'echo building code'
                // sh './mvnw package'
