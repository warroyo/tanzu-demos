           }    
       }
        stage('test') {
           steps {
               container('maven') {
                sh 'echo "running some tests'
                sh 'sleep 20'
                sh 'echo "tests succesfully passed"'
                }
           }    
       }
       stage('Build Container') {
           steps {                
               // Create our project directory.
               container(jenkins-ci-image)
               sh 'echo $TBS_KUBE > ~/.kube/config'
               sh 'kp image list'         
           }
       }
    //    stage('Publish') {
